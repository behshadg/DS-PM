generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String
  properties    Property[]
  tenants       Tenant[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Property {
  id          String    @id @default(cuid())
  title       String
  description String
  bedrooms    Int
  bathrooms   Int
  price       Float
  address     String
  city        String
  state       String
  zipCode     String
  images      String[]
  tenants     Tenant[]
  owner       User      @relation(fields: [ownerId], references: [id])
  ownerId     String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Tenant {
  id         String           @id @default(cuid())
  name       String
  email      String           @unique
  phone      String
  property   Property         @relation(fields: [propertyId], references: [id])
  propertyId String
  owner      User             @relation(fields: [ownerId], references: [id])
  ownerId    String
  documents  TenantDocument[] // New relation: tenant can have multiple documents.
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt
}

model TenantDocument {
  id           String    @id @default(cuid())
  tenant       Tenant    @relation(fields: [tenantId], references: [id])
  tenantId     String
  url          String    // URL of the uploaded document
  documentType String?   // e.g., "lease", "rentalApplication", etc.
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}
